@using ReaderRaport.Handlers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Reader Raport</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar mb-5 navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    @Html.ActionLink("Reader Raport", "Index", new { controller = "Select" }, new { @class = "navbar-brand nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink(@ReaderRaport.Resources.PageText.navYourDigitalLibrary, "YourDigitalLibrary", new { controller = "Select" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink(@ReaderRaport.Resources.PageText.navGenerateRaport, "Generate", new { controller = "Select" }, new { @class = "nav-link" })
                </li>

            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item active">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle"
                                type="button" id="dropdownMenu1" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                            @ReaderRaport.Resources.PageText.navLanguage
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            @Html.ActionLink("Polski", "Change", "Select", new { ln = "pl", source = @Html.CurrentViewName() }, new { @class = "dropdown-item" })
                            @Html.ActionLink("English", "Change", "Select", new { ln = "en", source = @Html.CurrentViewName() }, new { @class = "dropdown-item" })
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Reader Raport</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/dragAndDrop")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
